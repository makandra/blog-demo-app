<%= form_for @post, :html => { :class => 'form-horizontal' } do |f| %>

  <%= error_messages_for @post %>

  <div class="control-group">
    <%= f.label :author, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :author, :class => 'input-xxlarge form-control' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :title, :class => 'control-label input-large' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'input-xxlarge text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'input-xxlarge text_field', :cols => 40, :rows => 10 %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary btn-lg' %>
    <%= link_to "Cancel", posts_path, :class => 'btn' %>
  </div>

<% end %>
